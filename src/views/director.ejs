<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= director.first_name %> <%= director.last_name %></h1>
  <img src="/default_profile.png" alt="" height="200px;">

  <ul>
    <% director.genres.forEach(genre => { %>
      <li>
        <a href="/genres/<%= genre %>">
          <%= genre %>
        </a>
      </li>
    <% }); %>
  </ul>

  <ul>
    <% movies.forEach(movie => { %>
      <li>
        <a href="/movies/<%= movie.title %>">
          <img src="<%= movie.poster %>" alt="" height="150px;">
        <%= movie.title %>
        </a>
      </li>
    <% }); %>
  </ul>
</body>
</html>