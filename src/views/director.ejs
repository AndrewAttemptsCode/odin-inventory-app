<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <script src="/script.js"></script>
  <title><%= title %></title>
</head>
<body>
  <header>
    <div class="logo">
      <a href="/">Movies Inventory</a>
    </div>
    <%- include('partials/navbar') %>
  </header>

  <main class="grid">
  <section>
    <img class="director-img" src="/default_profile.png" alt="">
  </section>
  
  <section>
    <h1><%= director.first_name %> <%= director.last_name %></h1>

    <div>
      <h2>Biography</h2>
    <p class="bio"><%=director.bio %></p>
    </div>
    
    <ul class="genres-set">
      <% director.genres.forEach(genre => { %>
        <li>
          <a href="/genres/<%= genre %>">
            <p><%= genre %></p>
          </a>
        </li>
      <% }); %>
    </ul>

    <div>
      <h2>Filmography</h2>
      <ul class="item-list filmography">
        <% movies.forEach(movie => { %>
          <li>
            <a href="/movies/<%= movie.title %>">
              <img src="<%= movie.poster %>" alt="">
            <%= movie.title %>
            </a>
          </li>
        <% }); %>
      </ul>
    </div>
  </section>

  </main>
  
</body>
</html>